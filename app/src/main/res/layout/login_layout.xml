<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/back"
    android:visibility="visible"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/password_login_frame"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        >


        <!--password field-->
        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingEnd="40dp"
            android:paddingStart="10dp"
            android:singleLine="true"

            android:textCursorDrawable="@drawable/cursor_white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <!-- show password image show password when clicked-->
        <ImageView
            android:id="@+id/show_hide_password_login"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="8dp"
            android:src="@drawable/invisible_new"
            />
    </FrameLayout>
    <!--forgot pass Text-->
    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/password_login_frame"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        android:text="Forgot Password"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        />
    <!-- proceed text-->
    <TextView
        android:id="@+id/proceed_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_pass"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:paddingBottom="12dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:text="Proceed"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        />
</LinearLayout>